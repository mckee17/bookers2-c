<div class="container">
  <div class="row">
    <h2>Groups</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= attachment_image_tag group,:image, fallback: "no_image.jpg", size:"40x40" %></td>
          <td><%= group.name %></td>
          <td><%= group.introduction %></td>
        </tr>
      </tbody>
    </table>


    <% end %>
  </div>
</div>