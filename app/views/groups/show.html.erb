<div class="container">
  <div class="row">
    <h2>Group Deteil</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Introduction</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @owner,:profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
          <td><%= @owner.name %></td>
          <td><%= @owner.introduction %></td>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user,:profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>