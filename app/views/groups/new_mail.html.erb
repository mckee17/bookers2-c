<div class="container">
  <h2>Group Mail</h2>

  <%= form_with url: send_mail_group_path(@group), method: :get, local:true do |f| %>
   <div class="form-group">
    <label for="title">Title</label>
    <%= f.text_field :mail_title %>
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <%= f.text_area :mail_cantent %>
  </div>

  <%= f.submit "送信", class:"btn btn-success" %>
  <% end %>
</div>